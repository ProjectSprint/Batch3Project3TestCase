{
  "$ref": "#/definitions/Products",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "definitions": {
    "ProductCategory": {
      "enum": [
        "Food",
        "Beverage",
        "Clothes",
        "Furniture",
        "Tools"
      ],
      "type": "string"
    },
    "Products": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "productId": {
            "type": "string"
          },
          "name": {
            "type": "string",
            "minLength": 4,
            "maxLength": 32
          },
          "category": {
            "$ref": "#/definitions/ProductCategory"
          },
          "qty": {
            "type": "number",
            "minimum": 1
          },
          "price": {
            "type": "number",
            "minimum": 100
          },
          "sku": {
            "type": "string"
          },
          "fileId": {
            "type": "string"
          },
          "fileUri": {
            "type": "string"
          },
          "fileThumbnailUri": {
            "type": "string"
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "category",
          "qty",
          "price",
          "sku",
          "fileId"
        ]
      }
    }
  }
}